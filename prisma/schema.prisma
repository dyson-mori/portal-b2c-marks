generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./pegi_eighteen.db"
}

model Product {
  id          String  @id @default(uuid())

  title        String
  description String
  price       Decimal  @db.Decimal(10, 2)

  created_at DateTime @default(now())

  files      Files[]
  categories Category[]
  purchase   Purchase[]

  @@map("products")
}

model Files {
  id String @id @default(cuid())

  product_id    String
  cloudinary_id String

  url    String
  width  String
  height String

  product Product @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@index([product_id])
  @@map("files")
}

model Aside {
  id String @id @default(cuid())

  title String @unique

  categories Category[]

  created_at DateTime @default(now())

  @@map("aside")
}

model Category {
  id   String @id @default(cuid())

  title String @unique

  product Product[]
  aside   Aside[]

  created_at DateTime @default(now())

  @@map("categories")
}

model Address {
  id String @id @default(cuid())

  cep          String // cep: 32310370
  state        String // estado: MG
  city         String // cidade: Contagem
  neighborhood String // bairro: Eldorado
  street       String // logradouro: Rua Acacias
  number       String // 920
  phone        String // (00) 0 0000 0000
  description  String
  status       String? // start and finish

  purchase Purchase[]

  @@map("address")
}

model Purchase {
  id String @id @default(cuid())

  address_id String
  address    Address @relation(fields: [address_id], references: [id])
  product    Product[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("purchases")
}

